<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="student" class="com.hsbc.model.Student" scope="prototype" autowire="byName">
        <constructor-arg name="studentId" value="10101"/>
        <constructor-arg name="studentName" value="Tushar"/>
        <constructor-arg name="studentScore" value="60"/>
    </bean>
    <bean id="dept" class="com.hsbc.model.Department" scope="prototype">
        <constructor-arg index="0" value="10"/>
        <constructor-arg index="1" value="IT"/>
    </bean>
    <bean id="service" class="com.hsbc.service.StudentServiceImpl" scope="singleton">
        <property name="dao" ref="dao"/>
    </bean>

    <bean id="dao" class="com.hsbc.dao.StudentDaoImpl" scope="singleton">
        <property name="studentDB">
                <list>
                    <ref bean="student"/>
                </list>
        </property>
    </bean>
</beans>